/* pages/product/list.wxss */
.scroll_image {
    white-space: nowrap; 
    display: flex;
    height: 100px;
    margin-top: 10px;
}
.view_image_wrapper {
    width:100px;
    height:100px;
    margin-right:2px;
    display:inline-block;
}

.view_image_item {
    width:100%;
    height:100%;
    float:left;
}

.item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.float-action {
    position: fixed;
    float: right;
    bottom: 20px;
    right: 30px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    box-shadow: 2px 2px 10px #AAA;
    background-image: url(../images/add.png);
    background-size:100% 100%;
    z-index: 100;
}
/** wxss **/
/** 修改默认的navigator点击态 **/
.navigator-hover {
    color:blue;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
    color:red;
}
.menu_container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.menu_item {
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    box-sizing: border-box;
    padding-bottom: 10px;
    padding-top: 10px;
}
.menu_icon {
    width: 40px;
    height: 40px;
    padding-bottom: 5px;
}

.item_bottom_del {
    color:cornflowerblue;
    position:relative;
    border-top:1px solid #eaeaea;
    height:20px;
    text-align:right;
    padding-right:10px;
    padding-top:5px;
    font-size: 13px;
}
.product_item_status {
    float:left;
    display: inline-block;
    margin-right: 20px;
    border:1px solid lightgray;
    padding:0px 3px;
}
