@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
    background-color: #FFFFFF;
    border-top: 1px solid #e0e0e0;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

/* pages/order/orderDetail.wxss */
.section_item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}
.item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 2px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.item_image {
    width:80px;
    height:80px;
    margin-right:2px;
    float: left;
}
.receive_info {
    background: white;
    margin-left: 10px;
}
.user_info {
    font-size: 16px;
    font-weight: bold;
}
.address {
    margin-top: 6px;
    font-size: 13px;
}
.view_image_wrapper {
    width:100px;
    height:100px;
    margin-right:2px;
    float: left;
}

.view_image_item {
    width:100%;
    height:100%;
    float:left;
}

.product_wrapper{
    display:inline-block;
    width:95%;
}
.price_text {
    display:block;
    position:relative;
    top:50px;
    color: red;
}
.number_text {
    float:right;
    top:24px;
    position:relative;
    right:10px;
}

.text_right {
    float: right;
}

.red {
    color: red;
}
.small_text {
    font-size: 13px;
}

.inner_item {
    padding-top: 10px;
    padding-bottom: 10px;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.fix_bottom {
    position: fixed;
    float: left;
    bottom: 0px;
    left: 0px;
    width: 95%;
    box-shadow: 2px 2px 10px #AAA;
    z-index: 100;
    background:white;
}
.panel_buy_left {
    float:left;
    margin:10px;
    font-size: 14px;
    background-color: red;
    color: white;
}

.panel_buy_right{
    float:right;
    margin:10px;
    font-size: 14px;
}
.inline_block {
    display: inline-block;
}
.float_left {
    float:left;
}
.float_right {
    float:right;
}

.item_deal {
    margin-top: 10px;
    right: 10px;
    text-align: right;
    border-top: 1px solid #eaeaea;
    font-size: 12px;
    color: gray;
    padding-top: 10px;
}

.item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}
.loadMore {
    text-align:center;
    font-size: 14px
}
.text_black_border {
    margin: 5px;
    border: 1px solid darkgrey;
    padding: 2px 10px;
    font-size: 12px;
}

.fix_bottom_panel {
    position:fixed;
    bottom:0px;
    left:0px;
    width:100%;
    z-index: 101;
}

.fix_top_panel {
    position:fixed;
    top:0px;
    left:0px;
    width:100%;
    z-index: 101;
    border-top: 1px solid #e0e0e0;
    border-bottom: 2px solid #e0e0e0;
}
.input_border{
    border:1px solid darkgray;
    border-radius:5px;
}